<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <!-- row 1 -->

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/ForageKeypadDigitButtonStyle" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/forage_button_1"
            style="@style/ForageKeypadDigitButtonStyle" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/forage_button_2"
            style="@style/ForageKeypadDigitButtonStyle" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Del"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/forage_button_3"
            style="@style/ForageKeypadIconOnlyButtonStyle" />

    <!-- row 2 -->

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            app:layout_constraintTop_toBottomOf="@id/forage_button_1"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/ForageKeypadDigitButtonStyle" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            app:layout_constraintTop_toBottomOf="@id/forage_button_1"
            app:layout_constraintStart_toEndOf="@id/forage_button_4"
            style="@style/ForageKeypadDigitButtonStyle" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            app:layout_constraintTop_toBottomOf="@id/forage_button_1"
            app:layout_constraintStart_toEndOf="@id/forage_button_5"
            style="@style/ForageKeypadDigitButtonStyle" />

    <!-- row 3 -->

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            app:layout_constraintTop_toBottomOf="@id/forage_button_4"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/ForageKeypadDigitButtonStyle" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            app:layout_constraintTop_toBottomOf="@id/forage_button_4"
            app:layout_constraintStart_toEndOf="@id/forage_button_7"
            style="@style/ForageKeypadDigitButtonStyle" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            app:layout_constraintTop_toBottomOf="@id/forage_button_4"
            app:layout_constraintStart_toEndOf="@id/forage_button_8"
            style="@style/ForageKeypadDigitButtonStyle" />

    <!-- row 4 -->

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@id/forage_button_7"
            app:layout_constraintStart_toStartOf="@id/forage_button_8"
            app:layout_constraintEnd_toEndOf="@id/forage_button_8"
            style="@style/ForageKeypadDigitButtonStyle" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            app:layout_constraintTop_toBottomOf="@id/forage_button_9"
            style="@style/ForageKeypadDigitButtonStyle"
            app:layout_constraintStart_toEndOf="@id/forage_button_0" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/forage_button_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            app:layout_constraintTop_toBottomOf="@id/forage_button_9"
            style="@style/ForageKeypadDoneButtonStyle"
            app:layout_constraintStart_toEndOf="@id/forage_button_clear" />

</androidx.constraintlayout.widget.ConstraintLayout>