<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!-- row 1 -->
        <LinearLayout
                android:id="@+id/forage_row_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="1"
                    style="@style/ForageKeypadDigitButtonStyle" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="2"
                    style="@style/ForageKeypadDigitButtonStyle" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="3"
                    style="@style/ForageKeypadDigitButtonStyle" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_delete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Del"
                    style="@style/ForageKeypadIconOnlyButtonStyle" />
        </LinearLayout>

        <!-- row 2 -->
        <LinearLayout
                android:id="@+id/forage_row_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="4"
                    style="@style/ForageKeypadDigitButtonStyle" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="5"
                    style="@style/ForageKeypadDigitButtonStyle" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="6"
                    style="@style/ForageKeypadDigitButtonStyle" />

            <!--        A blank cell-->
            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

        </LinearLayout>

        <!-- row 3 -->

        <LinearLayout
                android:id="@+id/forage_row_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="7"
                    style="@style/ForageKeypadDigitButtonStyle" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="8"
                    style="@style/ForageKeypadDigitButtonStyle" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="9"
                    style="@style/ForageKeypadDigitButtonStyle" />

            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
        </LinearLayout>

        <!-- row 4 -->

        <LinearLayout
                android:id="@+id/forage_row_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />


            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="0"
                    style="@style/ForageKeypadDigitButtonStyle" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_clear"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="C"
                    style="@style/ForageKeypadDigitButtonStyle" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/forage_button_done"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Done"
                    style="@style/ForageKeypadDoneButtonStyle" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>