<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme attribute for the default style for the ForagePanEditText component. -->
    <attr name="foragePanEditTextStyle" format="reference" />

    <!-- Style attributes for the ForagePanEditText component. -->
    <declare-styleable name="ForagePANEditText">
        <!-- Style attribute for the TextInputLayout  -->
        <attr name="textInputLayoutStyle" format="reference" />
        <!-- Reusing android:text attribute -->
        <attr name="android:textColor" />
        <!-- Reusing android:textColor attribute -->
        <attr name="android:textSize" />

        <attr format="dimension" name="cornerRadius" />
        <attr format="dimension" name="boxCornerTopEnd" />
        <attr format="dimension" name="boxCornerTopStart" />
        <attr format="dimension" name="boxCornerBottomStart" />
        <attr format="dimension" name="boxCornerBottomEnd" />

        <attr format="color" name="android:strokeColor" />
        <attr format="float" name="android:strokeWidth" />
        <attr format="dimension" name="boxStrokeWidthFocused" />
    </declare-styleable>

    <!-- Style attributes for the ForagePanEditText component. -->
    <declare-styleable name="ForagePINEditText">
        <!-- Style attribute for the TextInputLayout  -->
        <attr name="pinInputLayoutStyle" format="reference" />

        <attr name="hint" />
        <attr name="text" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="boxStrokeColor" />
        <attr name="boxBackgroundColor" format="color" />
        <attr name="hintTextColor" format="color" />
        <attr format="dimension" name="boxCornerRadiusTopEnd" />

        <attr format="dimension" name="boxCornerRadiusTopStart" />

        <attr format="dimension" name="boxCornerRadiusBottomStart" />

        <attr format="dimension" name="boxCornerRadiusBottomEnd" />
        <attr format="dimension" name="boxCornerRadius" />

        <attr format="dimension" name="input_height" />
        <attr format="dimension" name="input_width" />

        <attr format="dimension" name="element_height" />
        <attr format="dimension" name="element_width" />
    </declare-styleable>
</resources>