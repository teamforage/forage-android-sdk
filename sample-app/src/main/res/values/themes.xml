<resources>
    <!-- Base application theme. -->
    <style name="Theme.ForageAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

        <!-- The ForagePanEditText shown in tokenize Fragment -->
        <item name="tokenizeForagePANEditTextStyle">@style/TokenizeForagePANEditTextStyle</item>
        <item name="tokenizeForageTextInputLayoutStyle">@style/TokenizeForageTextInputLayoutStyle
        </item>

        <!-- The first ForagePanEditText shown in catalog Fragment -->
        <item name="catalogFirstForagePanEditTextStyle">@style/CatalogFirstForagePanEditTextStyle
        </item>
        <item name="catalogFirstForageTextInputLayoutStyle">
            @style/CatalogFirstForageTextInputLayoutStyle
        </item>

        <!-- The second ForagePanEditText shown in catalog Fragment -->
        <item name="catalogSecondForagePanEditTextStyle">
            @style/CatalogSecondForagePanEditTextStyle
        </item>
        <item name="catalogSecondForageTextInputLayoutStyle">
            @style/CatalogSecondForageTextInputLayoutStyle
        </item>

        <!-- The third ForagePanEditText shown in catalog Fragment -->
        <item name="catalogThirdForagePanEditTextStyle">@style/CatalogThirdForagePanEditTextStyle
        </item>
        <item name="catalogThirdForageTextInputLayoutStyle">
            @style/CatalogThirdForageTextInputLayoutStyle
        </item>

        <!-- The foruth ForagePanEditText shown in catalog Fragment -->
        <item name="catalogFourthForagePanEditTextStyle">@style/CatalogFourthForagePanEditTextStyle
        </item>
        <item name="catalogFourthForageTextInputLayoutStyle">
            @style/CatalogFourthForageTextInputLayoutStyle
        </item>
    </style>
</resources>